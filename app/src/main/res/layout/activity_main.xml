<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="FlixsterPlus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="208dp"
        android:layout_height="74dp"
        android:text="In 1976, an eleven-year-old Gru dreams of becoming a supervillain, assisted by the Minions."
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="142dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="208dp"
        android:layout_height="74dp"
        android:text="Four years after the destruction of Isla Nublar, dinosaurs now live and hunt alongside humans all over the world. "
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="312dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="220dp"
        android:layout_height="102dp"
        android:text="Maverick must confront the ghosts of his past and his deepest fears, culminating in a mission that is the ultimate sacrifice"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="491dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="198dp"
        android:layout_height="168dp"
        app:srcCompat="@drawable/minions"
        tools:layout_editor_absoluteX="-15dp"
        tools:layout_editor_absoluteY="71dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="154dp"
        android:layout_height="170dp"
        app:srcCompat="@drawable/jurassic"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="260dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="128dp"
        android:layout_height="177dp"
        app:srcCompat="@drawable/topgun"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="451dp" />

</androidx.constraintlayout.widget.ConstraintLayout>